<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-autp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/item_lianzai_icon"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/colorAccent"/>

            <TextView
                android:id="@+id/item_lianzai_seenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_lianzai_icon"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:background="#6000"
                android:padding="3dp"
                android:text="1192人在看"
                android:textColor="#fff"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/item_lianzai_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_lianzai_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="爱神巧克力"
                android:lines="2"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/item_lianzai_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_lianzai_title"
                android:layout_marginLeft="10dp"
                android:text="第1话"
                android:textColor="#666"/>

            <TextView
                android:id="@+id/item_lianzai_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/item_lianzai_number"
                android:layout_marginRight="10dp"
                android:text="上周六"
                android:textColor="#666"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>